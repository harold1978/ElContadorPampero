@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElContadorPampero</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElContadorPampero.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElContadorPampero</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary btn-sm" asp-area="" asp-controller="Contabilidads" asp-action="Index"><i class="bi bi-list-check border border-1"></i> CONTABILIDAD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary btn-sm" asp-area="" asp-controller="CuentaContables" asp-action="Index"><i class="bi bi-list-check border border-1"></i> CUENTAS</a>
                        </li>
@*                         <li class="nav-item"> 
                            <a class="nav-link text-dark btn btn-outline-primary btn-sm" asp-area="" asp-controller="AsientoContables" asp-action="index">ASIENTOS DIARIOS</a>
                        </li> *@
@*                         <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary btn-sm" asp-area="" asp-controller="DetalleAsientoContables" asp-action="index">MOVIMIENTOS</a>
                        </li> *@

                        <li class="nav-item">
                            <span>@if (User.Identity!.IsAuthenticated)
                                {
                                    @*                                     <a class="nav-link text-dark btn btn-danger btn-sm ms-2" asp-controller="Usuarios" asp-action="Salir">
                                        @User.Claims.Where(c=>c.Type == ClaimTypes.Email).Select(j=>j.Value).SingleOrDefault();
                                    </a> *@
                                    <partial name="Salir"  />
                                }
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ElContadorPampero - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
