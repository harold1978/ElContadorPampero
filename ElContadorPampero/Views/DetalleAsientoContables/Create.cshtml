@model ElContadorPampero.Models.DetalleAsientoContable

@{
    ViewData["Title"] = "Create";
}
<div class="card">
    <div class="card-header">
        <h1>Crear</h1>

        <h4>Movimientos</h4>
    </div>
    @*   <hr /> *@
    <div class="card-body">

        <form asp-action="Create" class="d-flex flex-wrap flex-grow-1 gap-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AsientoContableId" class="control-label"></label>
                    <select asp-for="AsientoContableId" class="form-control" asp-items="ViewBag.AsientoContableId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CuentaContableId" class="control-label"></label>
                    <select asp-for="CuentaContableId" class="form-control" asp-items="ViewBag.CuentaContableId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Cargo" class="control-label"></label>
                    <select asp-for="Cargo" class="form-control">
                        <option value="Debe">Debe</option>
                        <option value="Haber">Haber</option>
                    </select>
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Monto" class="control-label"></label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
                <div class="form-group align-content-end">
                    <input type="submit" value="Aregar" class="btn btn-primary" />
                </div>
            </form>
      
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
