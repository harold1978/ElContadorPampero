@model IEnumerable<ElContadorPampero.Models.DetalleAsientoContable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.AsientoContable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CuentaContable)
            </th>
            <th>
                DEBE
            </th>
            <th>
                HABER
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.AsientoContable.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuentaContable.Nombre)
            </td>
                <td>
                    @(item.Cargo=="Debe"?item.Monto:0)
                </td>
                <td>
                    @(item.Cargo == "Haber" ? item.Monto : 0)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
